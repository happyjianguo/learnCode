			<forward name="login.jsp" path="/jsppage/common/login.jsp"></forward>
			<forward name="result.jsp" path="/jsppage/common/result.jsp"></forward>
		</action>
		<action  path="/sysmain" attribute="loginForm" name="loginForm" scope="request" type="com.pay.struts.action.SysMainAction">
			<forward name="index.jsp" path="/jsppage/common/head.jsp"></forward>
			<forward name="login.jsp" path="/jsppage/common/login.jsp"></forward>
			<forward name="result.jsp" path="/jsppage/common/result.jsp"></forward>
		</action>
