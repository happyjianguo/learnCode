<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.yufu.fs.dao.ViewTranRecordOrgMapper" >

  <resultMap id="BaseResultMap" type="cn.yufu.fs.entity.ViewTranRecordOrg" >
    <result column="MERCHANTNUMBER" property="merchantnumber" jdbcType="VARCHAR" />
    <result column="MRCHT_NAME" property="mrchtName" jdbcType="VARCHAR" />
    <result column="TRANSACTIONMONEY" property="transactionmoney" jdbcType="DECIMAL" />
    <result column="TRANSACTIONDATE" property="transactiondate" jdbcType="VARCHAR" />
    <result column="FEE_ORDER" property="feeOrder" jdbcType="DECIMAL" />
    <result column="PERFEE" property="perfee" jdbcType="DECIMAL" />
    <result column="FEE_RETENTION" property="feeRetention" jdbcType="DECIMAL" />
    <result column="AMT_RETENTION" property="amtRetention" jdbcType="DECIMAL" />
    <result column="ORG_NO" property="orgNo" jdbcType="VARCHAR" />
    <result column="ORG_NAME" property="orgName" jdbcType="VARCHAR" />
    <result column="ORG_BIN" property="orgBin" jdbcType="VARCHAR" />
    <result column="AMT_SHARE" property="amtShare" jdbcType="DECIMAL" />
    
    <result column="TRAN_TOTAL" property="tranTotal" jdbcType="VARCHAR" />
  </resultMap>
  
  <sql id="Example_Where_Clause" >
    <where >
      <foreach collection="example.oredCriteria" item="criteria" separator="or" >
        <if test="criteria.valid" >
          <trim prefix="(" suffix=")" prefixOverrides="and" >
            <foreach collection="criteria.criteria" item="criterion" >
              <choose >
                <when test="criterion.noValue" >
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue" >
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue" >
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue" >
                  and ${criterion.condition}
                  <foreach collection="criterion.value" item="listItem" open="(" close=")" separator="," >
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  
  <sql id="Base_Column_List" >
    MERCHANTNUMBER, MRCHT_NAME, TRANSACTIONMONEY, TRANSACTIONDATE, FEE_ORDER, PERFEE, 
    FEE_RETENTION, AMT_RETENTION, ORG_NO, ORG_NAME, ORG_BIN, AMT_SHARE
  </sql>
  
  <sql id="Base_Total_Column_List" >
    MERCHANTNUMBER, MRCHT_NAME, ORG_NO, ORG_BIN, FEE_ORDER AS FEE_ORDER, 
	FEE_RETENTION*100 AS FEE_RETENTION, COUNT(*) AS TRAN_TOTAL,
	SUM(TRANSACTIONMONEY) AS TRANSACTIONMONEY, SUM(PERFEE) AS PERFEE,
	SUM(AMT_RETENTION) AS AMT_RETENTION, SUM(AMT_SHARE) AS AMT_SHARE
  </sql>
   
  <select id="selectByExample" resultMap="BaseResultMap" parameterType="cn.yufu.fs.entity.ViewTranRecordOrgExample" >
	SELECT 
		<include refid="Base_Total_Column_List" />
	FROM VIEW_TRAN_RECORD_ORG
		<if test="_parameter != null" >
	      <include refid="Example_Where_Clause" />
	    </if>
	GROUP BY MERCHANTNUMBER, MRCHT_NAME, FEE_ORDER, FEE_RETENTION, ORG_NO, ORG_BIN
	ORDER BY TRANSACTIONMONEY DESC
  </select> 
  
  <select id="countByExample" parameterType="cn.yufu.fs.entity.ViewTranRecordOrgExample" resultType="java.lang.Integer">
    SELECT COUNT(*) FROM (
    SELECT 
		<include refid="Base_Total_Column_List" />
	FROM VIEW_TRAN_RECORD_ORG
		<if test="_parameter != null" >
	      <include refid="Example_Where_Clause" />
	    </if>
	GROUP BY MERCHANTNUMBER, MRCHT_NAME, FEE_ORDER, FEE_RETENTION, ORG_NO, ORG_BIN )
  </select>
  
  <select id="selectPageList" parameterType="map" resultMap="BaseResultMap">
	SELECT * FROM (
	SELECT a.*, ROWNUM rn FROM(
	SELECT 
		<include refid="Base_Total_Column_List" />
	FROM VIEW_TRAN_RECORD_ORG
		<if test="_parameter != null" >
	      <include refid="Example_Where_Clause" />
	    </if>
	GROUP BY MERCHANTNUMBER, MRCHT_NAME, FEE_ORDER, FEE_RETENTION, ORG_NO, ORG_BIN
	ORDER BY TRANSACTIONMONEY DESC ) a
		WHERE <![CDATA[ ROWNUM <= ${endResult} ]]>)
		WHERE rn &gt; ${startResult}
  </select>  
  
  <select id="getSumAmt" resultMap="BaseResultMap" parameterType="cn.yufu.fs.entity.ViewTranRecordOrgExample" >
    SELECT 
    	SUM(PERFEE) AS PERFEE, SUM(AMT_RETENTION) AS AMT_RETENTION, 
    	SUM(AMT_SHARE) AS AMT_SHARE
	FROM VIEW_TRAN_RECORD_ORG
		<if test="_parameter != null" >
	      <include refid="Example_Where_Clause" />
	    </if>
  </select> 
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.String" >
    SELECT 
    <include refid="Base_Column_List" />
    FROM VIEW_TRAN_RECORD_ORG
    WHERE MERCHANTNUMBER = #{merchantnumber,jdbcType=VARCHAR}
  </select>
  
</mapper>