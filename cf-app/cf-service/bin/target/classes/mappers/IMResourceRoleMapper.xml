<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.jansh.mapper.system.IMResourceRoleMapper">

	<resultMap type="IMResourceRole" id="IMResourceRoleMap">
		<result column="ROLEID" property="roleId"/>
		<result column="RESOURCEID" property="resourceId"/>
		<result column="STATUS" property="status"/>
		<result column="UPDATETIME" property="updateTime"/>
		<result column="CREATETIME" property="createTime"/>
	</resultMap>
	<insert id="insert" parameterType="IMResourceRole">
		INSERT INTO
			IMROLERESOURCE(ROLEID,RESOURCEID,STATUS,UPDATETIME,CREATETIME)
		VALUES
			(#{roleId},#{resourceId},#{status},#{updateTime},#{createTime})
	</insert>
	<select id="selectAllByRoleId" parameterType="String"  resultMap="IMResourceRoleMap">
		SELECT 
			ROLEID,RESOURCEID,STATUS,UPDATETIME,CREATETIME
		FROM
			IMROLERESOURCE
		WHERE
			ROLEID=#{roleId}
		ORDER BY ROLEID ASC
	</select>
	
	<select id="selectOneByResourceId" parameterType="String"  resultType="IMResourceRole">
		SELECT 
			ROLEID,RESOURCEID,STATUS,UPDATETIME,CREATETIME
		FROM
			IMROLERESOURCE
		WHERE
			RESOURCEID=#{resourceId}
	</select>
	
	<update id="update" parameterType="IMResourceRole">
		UPDATE 
			IMROLERESOURCE
		SET
			STATUS=#{status},
			UPDATETIME=#{updateTime}
		WHERE
			ROLEID=#{roleId}
	</update>
	<delete id="deleteByRoleId" parameterType="String">
		DELETE FROM
			IMROLERESOURCE
		WHERE
			ROLEID=#{roleId}
	</delete>
	
	<delete id="deleteByResourceId" parameterType="String">
		DELETE FROM
			IMROLERESOURCE
		WHERE
			RESOURCEID=#{resourceId}
	</delete>

</mapper>