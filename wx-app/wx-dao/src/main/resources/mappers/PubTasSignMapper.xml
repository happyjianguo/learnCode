<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.jansh.dao.mapper.PubTasSignMapper">
	<select id="selectByDocId" parameterType="String" resultType="PubTasSign">
		SELECT 
			APPID,OPENID,CARDNUM,CARDNAME,TEMPLATETITLE,TEMPLATENO,TEMPLATEID,TEMPLATETIME,TEMPLATETYPE,TEMPLATENUMBER,TEMPLATEBALANCE,ORIGIN,INSERTTIME,STATUS
		FROM 
			PUBTASSIGN 
		WHERE 
			DOCID=#{docid}
	</select>
	
	<select id="selectPubTassgin" resultType="PubTasSign">
		SELECT 
			DOCID,APPID,OPENID,CARDNUM,CARDNAME,TEMPLATETITLE,TEMPLATENO,TEMPLATEID,TEMPLATETIME,TEMPLATETYPE,TEMPLATENUMBER,TEMPLATEBALANCE,ORIGIN,INSERTTIME,STATUS
		FROM 
			PUBTASSIGN 
		WHERE 
			STATUS='0'
	</select>
	
	<update id="updateByWSQM" parameterType="Map">
			UPDATE
				 PUBTASSIGN 
			<set> 
		    	<if test="status != null">
		    		STATUS = #{status},
		    	</if>   
		        <if test="inserttime != null">    
		            INSERTTIME = #{inserttime},    
		        </if>    
		    </set> 
			WHERE DOCID= #{docid}
		</update>
	
	
</mapper>

